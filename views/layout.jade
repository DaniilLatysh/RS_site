doctype html
html
  head
    title Alpha_Visit
    for style in styles
        link(rel='stylesheet', href='#{style}')
    for script in scripts
        script(src='#{script}')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='content-type', content='text/html; charset=utf-8')

  body
  
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='RS') Recording Studio
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a.button(href='clients') Clients
            li
              a.button(href='equipment') Equipment
            li
              a.button(href='#') Contact  


    header#myCarousel.carousel.slide

      ol.carousel-indicators
        li.active(data-target='#myCarousel', data-slide-to='0')
        li(data-target='#myCarousel', data-slide-to='1')
        li(data-target='#myCarousel', data-slide-to='2')

      .carousel-inner
        .item.active
          .fill(style="background-image:url('img/slider/11.jpg');")
          .carousel-caption
        .item
          .fill(style="background-image:url('img/slider/22.jpg');")
          .carousel-caption
        .item
          .fill(style="background-image:url('img/slider/44.jpg');")
          .carousel-caption
      a.left.carousel-control(href='#myCarousel', data-slide='prev')
        span.icon-prev
      a.right.carousel-control(href='#myCarousel', data-slide='next')
        span.icon-next



